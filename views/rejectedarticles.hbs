<style>
    body {
        background-color: #eee
    }

    .time {
        font-size: 9px !important
    }

    .socials i {
        margin-right: 14px;
        font-size: 17px;
        color: #d2c8c8;
        cursor: pointer
    }

    .feed-image img {
        width: 100%;
        height: auto
    }
</style>

<div class="content">

    {{#unless rejectedarticles}}
    <h4>No rejected articles</h4>
    {{/unless}}

    {{#each rejectedarticles}}
    <div class="container px-1 mt-4 mb-4">
        <div class="d-flex justify-content-center row">
            <div class="col-md-8">
                <div class="feed p-2">
                    <!-- <div class="d-flex flex-row justify-content-between align-items-center p-2 bg-white border">
                        <div class="feed-text px-2">
                            <h6 class="text-black-50 mt-2">What's on your mind</h6>
                        </div>
                        <div class="feed-icon px-2"><i class="fa fa-long-arrow-up text-black-50"></i></div>
                    </div> -->
                    <div class="bg-white border mt-2">
                        <div>
                            <div class="d-flex flex-row justify-content-between align-items-center p-2 border-bottom">
                                <div class="d-flex flex-row align-items-center feed-text px-2"><img
                                        class="rounded-circle" src="https://i.imgur.com/aoKusnD.jpg" width="45">
                                    <div class="d-flex flex-column flex-wrap ml-2"><span
                                            class="font-weight-bold">{{../userdata.name}}</span><span
                                            class="text-black-50 time">40 minutes
                                            ago</span></div>
                                </div>
                                <div class="feed-icon px-2"><i class="fa fa-ellipsis-v text-black-50"></i></div>
                            </div>
                        </div>
                        <h6 class="p-2 px-3">{{this.title}}</h6>
                        <div class="p-1 px-3"><span>{{this.description}}</span></div>
                        <hr style="width: 95%;">
                        <div class="p-1 px-3" style="color: rgb(48, 49, 49);"><span>{{this.content}}</span></div>


                    </div>
                </div>
            </div>
        </div>
        {{/each}}



