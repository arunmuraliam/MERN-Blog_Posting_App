doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='../public/stylesheets/signup.css' type='text/css')
  // Bootstrap CSS
  style 
    include signup.css 
  title Hello, world!
.container
  .row
    .col-lg-10.col-xl-9.mx-auto
      .card.flex-row.my-5.border-0.shadow.rounded-3.overflow-hidden
        .card-img-left.d-none.d-md-flex
          // Background image for card set in CSS!
        .card-body.p-4.p-sm-5
          h5.card-title.text-center.mb-5.fw-light.fs-5 Register
          form(action='' method='post' role='form')
            .form-floating.mb-3
              input#floatingInputUsername.form-control(type='text' name='uname' placeholder='myusername' required='' autofocus='')
              label(for='floatingInputUsername') Username
            .form-floating.mb-3
              input#floatingInputEmail.form-control(type='email' name='email' placeholder='name@example.com')
              label(for='floatingInputEmail') Email address
            hr
            .form-floating.mb-3
              input#floatingPassword.form-control(type='password' name='pass1' placeholder='Password')
              label(for='floatingPassword') Password
            .form-floating.mb-3
              input#floatingPasswordConfirm.form-control(type='password' name='pass2' placeholder='Confirm Password')
              label(for='floatingPasswordConfirm') Confirm Password
            .d-grid.mb-2
              button.btn.btn-lg.btn-primary.btn-login.fw-bold.text-uppercase(type='submit') Register
            a.d-block.text-center.mt-2.small(href='/login') Have an account? Sign In
// Optional JavaScript; choose one of the two!
script(src='../public/javascripts/login.js')
